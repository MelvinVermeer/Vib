@model Session

<div class="js-modal-content modal-content">

    <div class="js-modal-close modal-close" data-session-id="@Model.Id">
        @* Een kruis *@
        <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
            <path d="M0 0h24v24H0z" fill="none" />
        </svg>
    </div>

    <h3>@Model.Title</h3>

    <div class="info">
        <div class="info-location">@Model.Location</div>
        <div class="info-time">Tijd: @Model.TimeSlot.Title</div>
        <div class="info-speaker">@Model.Speaker</div>
    </div>

    <div class="description" style="white-space:pre-line">
        @Html.Raw(Model.Description)
    </div>

    <div class="modal-footer">
        @if (Model.IsOptional)
        {
            <div class="already-subscribed-in-slot">
                Je bent al ingeschreven bij een andere sessie in dit slot, aanmelden voor deze sessie zorgt ervoor dat je automatisch bij de andere sessie wordt uitgeschreven
            </div>

            <button class="subscribe js-subscribe" data-session-id="@Model.Id">aanmelden</button>
            <button class="unsubscribe js-unsubscribe" data-session-id="@Model.Id">afmelden</button>
        } else {
            <p class="group-session">
                Deze sessie is voor iedereen
