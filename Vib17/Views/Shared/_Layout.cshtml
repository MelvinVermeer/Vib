@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* NO - want https://medium.com/@firt/dont-use-ios-web-app-meta-tag-irresponsibly-in-your-progressive-web-apps-85d70f4438cb *@
    <meta name="apple-mobile-web-app-capable" content="no">
    <meta name="apple-mobile-web-app-title" content="Carrièredag 2018">

    <script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=Array.from,Object.assign,Promise,fetch"></script>

    <title>VIB Carrièredag 2018</title>
    <link rel="stylesheet" href="~/css/style.min.css" />
    <style>
        .main-container{
             max-width: 500px;
    margin: auto;
        }
    </style>
</head>
<body>
    <div class="main-container">

    <nav>
        <a mark-active-route asp-area="" asp-controller="Home" asp-action="Index">
            @* Een calendar *@
            <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M17 10H7v2h10v-2zm2-7h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zm-5-5H7v2h7v-2z" />
            </svg>
        </a>
        <a mark-active-route asp-area="" asp-controller="Home" asp-action="Contact">
            @* Een i in een rondje fill *@
            <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z" />
            </svg>
        </a>
        @if (SignInManager.IsSignedIn(User))
        {
            <a mark-active-route asp-area="" asp-controller="Manage" asp-action="Index">
                @* Een poppetje fill *@
                <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                    <path d="M0 0h24v24H0z" fill="none" />
                </svg>
            </a>
        }
        else
        {
            <a mark-active-route asp-area="" asp-controller="Account" asp-action="LoginWithExternal">
                @* Een poppetje open *@
                <svg fill="#000000" height="48" viewBox="0 0 24 24" width="48" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 5.9c1.16 0 2.1.94 2.1 2.1s-.94 2.1-2.1 2.1S9.9 9.16 9.9 8s.94-2.1 2.1-2.1m0 9c2.97 0 6.1 1.46 6.1 2.1v1.1H5.9V17c0-.64 3.13-2.1 6.1-2.1M12 4C9.79 4 8 5.79 8 8s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 9c-2.67 0-8 1.34-8 4v3h16v-3c0-2.66-5.33-4-8-4z" />
                    <path d="M0 0h24v24H0z" fill="none" />
                </svg>
            </a>
        }

        @if (User.IsInRole("Admin"))
        {
            <a mark-active-route asp-area="" asp-controller="Admin" asp-action="Sessions">
                <svg fill="#000000" height="48" viewBox="0 0 24 24" width="48" xmlns="http://www.w3.org/2000/svg">
                    <path clip-rule="evenodd" d="M0 0h24v24H0z" fill="none" />
                    <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z" />
                </svg>
            </a>
        }
    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>
    </div>
    
    <script defer src="~/js/site.es5.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
